name=squashfs-tools
ver=4.5
desc="Tool for working with squashfs compression"
home="https://github.com/plougher/$name"
license="GPL2"
depends="xz zstd"
mkdeps="gmake"
sources="https://github.com/plougher/$name/archive/refs/tags/$ver.tar.gz"
files="$ver.tar.gz"

unpack() {
cd $workdir
tar -xf $hanhdir/$ver.tar.gz
}

compile() {
cd $workdir/$name-$ver
gmake -C $name \
	GZIP_SUPPORT=1 \
	XZ_SUPPORT=1 \
	LZMA_XZ_SUPPORT=1 \
	ZSTD_SUPPORT=1 
}

mkpkg() {
cd $workdir/$name-$ver
gmake -C $name install INSTALL_DIR=$pkgdir/bin
}
