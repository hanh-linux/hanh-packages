name=diffutils
ver=3.8
desc="Tool for showing text differences"
homepage="https://www.gnu.org/software/diffutils/"
depends="musl sh"

sources="https://ftp.gnu.org/gnu/diffutils/diffutils-3.8.tar.xz"

unpack-pkg() {
cd $workdir
tar -xf ../$name-$ver.tar.xz
}

compile-pkg() {
cd $workdir/$name-$ver
./configure --prefix=/usr
make
}

make-pkg() {
cd $workdir/$name-$ver
make DESTDIR=$pkgdir install
}
