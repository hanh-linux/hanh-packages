name=toybox
ver=0.8.6
desc="Multi-call small binary"
home="https://github.com/landley/toybox"
sources="https://codeload.github.com/landley/toybox/tar.gz/refs/tags/$ver"
license="0BSD"
attach="config"
needed="$ver $attach"
buildFlags="full"

unpack(){
cd $workdir
tar -xf $hanhdir/$ver
}

compile(){
cd $workdir/$name-$ver
make defconfig
make
}

mkpkg() {
cd $workdir/$name-$ver
make PREFIX=$pkgdir install
cd $pkgdir 
for bindir in bin sbin usr/sbin; do 
	mv $bindir/* usr/bin
	rm -rf $bindir
done

for bin in $(ls usr/bin/); do
	if test -f $misc/usr/bin/$bin; then
		rm -rvf usr/bin/$bin
	fi
done
}
