name=toybox
ver=0.8.5
desc="Multi-call small binary"
home="https://github.com/landley/toybox"
sources="https://codeload.github.com/landley/toybox/tar.gz/refs/tags/$ver"
license="0BSD"
needed="$ver config"
build_flag="full"

unpack-pkg(){
cd $workdir
tar -xf $hanhdir/$ver
}

compile-pkg(){
cd $workdir/$name-$ver
make defconfig
make
}

compile-pkg_full(){
cd $workdir/$name-$ver
cp -r $hanhdir/config .config 
make
}

make-pkg() {
cd $workdir/$name-$ver
make PREFIX=$pkgdir install
}
