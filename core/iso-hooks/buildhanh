name=iso-hooks
ver=1.0
desc="Hanh Linux ISO hooks"
license="None"
needed="iso.before iso"

make-pkg() {
install -dm755 $pkgdir/usr/share/gen-initramfs/hooks
install -Dm755 iso $pkgdir/usr/share/gen-initramfs/hooks/iso
install -Dm755 iso.before $pkgdir/usr/share/gen-initramfs/hooks/iso.before
install -Dm755 iso.sh $pkgdir/usr/share/gen-initramfs/hooks/iso.sh
}
