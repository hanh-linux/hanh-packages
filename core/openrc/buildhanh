# Reference: Artix Linux

name=openrc
ver=0.44.10
desc="Gentoo init daemon"
home="https://github.com/OpenRC/openrc"
license="BSD"
mkdeps="meson"
sources="https://github.com/OpenRC/openrc/archive/refs/tags/$ver.tar.gz"
config="etc/rc.conf"
needed="$ver.tar.gz"

unpack() {
cd $workdir/
tar -xf $hanhdir/$ver.tar.gz
}

compile() {
cd $workdir/$name-$ver

meson setup \
	--prefix /usr \
	--libexecdir lib \
	--sbindir bin \
	--buildtype plain \
	-Drootprefix=/usr \
	-Dshell=/bin/sh \
	-Dbranding="\"Hanh Linux\"" \
	-Dos=Linux \
	-Dpam=false \
	-Dsysvinit=true \
	-Dpkgconfig=true \
	-Dtermcap='' \
	-Dbash-completions=false \
	-Dzsh-completions=false \
	-Dsplit-usr=true \
	-Dnewnet=false \
	-Daudit=disabled \
	-Dselinux=disabled build

meson compile -C build
}

mkpkg() {
cd $workdir/$name-$ver
meson install -C build --destdir=$pkgdir
}
