# Reference: AUR

name=zlib-ng
ver=2.0.5
desc="zlib replacement with optimizations" 
home="https://github.com/zlib-ng/zlib-ng"
license="Zlib"
contain="zlib"
sources="https://github.com/zlib-ng/$name/archive/refs/tags/$ver.tar.gz"
needed="$ver.tar.gz"

unpack-pkg() {
cd $workdir
tar -xf $hanhdir/$ver.tar.gz
}

compile-pkg() {
cd $workdir/$name-$ver
./configure --prefix=/usr --zlib-compat
make 
}

make-pkg() {
cd $workdir/$name-$ver
make DESTDIR=$pkgdir install
}
