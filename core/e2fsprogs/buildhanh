# Reference: Arch Linux

name=e2fsprogs
ver=1.46.4
desc="EXT* filesystem ulitities"
home="https://e2fsprogs.sourceforge.net"
license="GPL LGPL MIT"
sources="https://prdownloads.sourceforge.net/$name/$name-$ver.tar.gz"
depends="util-linux sh"
needed="$name-$ver.tar.gz"
ignore_files="etc/e2scrub.conf  etc/mke2fs.conf"

unpack-pkg() {
cd $workdir 
tar -xf $hanhdir/$name-$ver.tar.gz
}

compile-pkg() {
cd $workdir/$name-$ver
./configure --prefix=/usr           \
             --sysconfdir=/etc       \
             --enable-elf-shlibs     \
             --disable-libblkid      \
             --disable-libuuid       \
             --disable-uuidd         \
             --disable-fsck
make
}

make-pkg() {
cd $workdir/$name-$ver
make DESTDIR=$pkgdir install
}
