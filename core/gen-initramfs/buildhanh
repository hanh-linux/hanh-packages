name=gen-initramfs
ver=1.0
desc="Hanh Linux tool for generating initramfs"
license="None"
depends="busybox-initramfs "
contain="initcpio"
files="gen-initramfs init.in"
task="mkpkg"

mkpkg() {
cd $pkgdir
install -dm755 usr/bin 
install -dm755 usr/share/$name
install -Dm755 $hanhdir/gen-initramfs usr/bin/gen-initramfs
install -Dm755 $hanhdir/init.in usr/share/$name/init.in
}
