# Reference: AUR, Glaucus Linux
name=mawk
_date=20200120
_ver=1.3.4
ver="$_ver-$_date"
desc="An interpreter for the AWK Programming Language"
home="http://invisible-island.net/mawk/"
license="GPL2"
sources="https://invisible-island.net/datafiles/release/$name.tar.gz"
depends="musl"
needed="$name.tar.gz"

unpack-pkg() {
cd $workdir/
tar -xf $hanhdir/$name.tar.gz
}

compile-pkg() {
cd $workdir/$name-$ver
# For cross-compiling, use --build= option
./configure --prefix=/usr --without-man2html  
make
}

make-pkg() {
cd $workdir/$name-$ver
make DESTDIR=$pkgdir install
}
